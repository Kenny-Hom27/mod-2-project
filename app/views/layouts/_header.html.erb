<div class="title_bar">

  <a class="architecture_search">Search for Architecture by name:
  <%= form_tag(architectures_path, :method => "get") do %>
      <%= text_field_tag :name, params[:name]%>
      <%= submit_tag "Search" %>
  <% end %></a> <br><br>

  <a class="title_buttons"><%= button_to "All Architectures", architectures_path, method: :get %></a>
  <a class="title_buttons"><%= button_to "All Artists", artists_path, method: :get %></a>
  <a class="title_buttons"><%= button_to "Write a Review", new_review_path, method: :get %></a>

  <% if logged_in? %>
    <a class="login_status"><h4>Logged in as <%= current_user.username%>
      <%= button_to "Log out", logout_path, method: :delete %></a>
    </h4>
    <br />
  <% else %>
    <% require_logged_in %>
  <% end %>

</div>
